<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60B6F1"
    tools:context=".About">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans"
            android:textSize="26dp"
            android:textColor="#FFD700"
            android:layout_margin="20dp"/>


        <ImageView
            android:layout_width="223dp"
            android:layout_height="229dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/splsh12"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:fontFamily="@font/blinker_light"
            android:justificationMode="inter_word"

            android:text="@string/aboutus"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="212dp"
                android:layout_height="49dp"
                android:layout_gravity="left"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_x="10dp"
                android:layout_y="0dp"
                android:src="@drawable/grp"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="259dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_x="140dp"
                android:layout_y="50dp"
                android:src="@drawable/adt"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="245dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_x="140dp"
                android:layout_y="100dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ro"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="244dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_x="140dp"
                android:layout_y="150dp"
                android:src="@drawable/dev"
                tools:ignore="ContentDescription" />

            <ImageView
                android:layout_width="244dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp"
                android:layout_x="140dp"
                android:layout_y="190dp"
                android:src="@drawable/v"
                tools:ignore="ContentDescription" />

        </AbsoluteLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Version 1.0.0"
            android:textColor="@color/black" />
    </LinearLayout>
</ScrollView >